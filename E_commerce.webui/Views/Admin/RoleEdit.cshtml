@model  E_commerce.webui.Model.RoleDetails
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="h3">Rol Güncelle</h1>
<hr>
<div class="row">  
    <div class="col-md-12">
             <form asp-controller="Admin" asp-action="RoleEdit">
                 <input type="hidden" name="RoleId" value="@Model.Role.Id">
                 <input type="hidden" name="RoleName" value="@Model.Role.Name">
                 <h6 class="bg-info text-white p-1">Güncelle @Model.Role.Name</h6>
             <table class="table table-bordered table-sm">
                 @if(Model.NonMembers.Count()==0)
                 {
                     <tr>
                         <td colspan="2">Bütün kullanılar role ait</td>
                     </tr>
                 }
                 else
                 {
                     @foreach (var user in Model.NonMembers)
                     {
                         <tr>
                             <td>@user.UserName</td>
                             <td style="width: 250px;">                       
                             <input type="checkbox" name="IdsToAdd" value="@user.Id">
                             </td>
                         </tr>
                     }
                 }
             </table>
             <hr>   
              <h6 class="bg-info text-white p-1">Sil @Model.Role.Name</h6>
             <table class="table table-bordered table-sm">
                 @if(Model.Members.Count()==0)
                 {
                     <tr>
                         <td colspan="2">Role ait kullanıcı yok</td>
                     </tr>
                 }
                 else
                 {
                     @foreach (var user in Model.Members)
                     {
                         <tr>
                             <td>@user.UserName</td>
                             <td style="width: 250px;">                        
                             <input type="checkbox" name="IdsToDelete" value="@user.Id">
                             </td>
                         </tr>
                     }
                 }
             </table>
               <button type="submit" class="btn btn-danger btn-sm">Kaydet</button>

             </form>
              
    </div>
</div>