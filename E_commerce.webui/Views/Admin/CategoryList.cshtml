@model E_commerce.webui.Model.CategoryListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Kategori Paneli</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/categories/create">Kategori Ekle</a>

        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td>Name</td>
                    <td style="width: 350px;"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Categories.Count>0)
                {
                @foreach (var item in Model.Categories)
                {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/admin/categories/@item.CategoryId" class="btn btn-primary btn-sm mr-2">Kategori
                            GÃ¼ncelle</a>

                        <form action="/admin/deletecategory" method="POST" style="display: inline;">
                            <input type="hidden" name="categoryId" value="@item.CategoryId">
                            <button type="submit" class="btn btn-danger btn-sm">Kategori Sil</button>

                        </form>
 </td> </tr>
                }
                }
                else
                {
                <div class="alert alert-warning">
                    <h3>Kategori Yok</h3>
                </div>
                }
            </tbody>
        </table>
    </div>
</div>