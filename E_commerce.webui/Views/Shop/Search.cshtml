@model E_commerce.webui.Model.ProductListViewModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model.Product)
            {
            <div class="col-md-4">
                @await Html.PartialAsync("_product",product)
            </div>
            }
        </div>
    </div>
</div>

